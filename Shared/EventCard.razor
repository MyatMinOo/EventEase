@using EventEase.Models

<div class="event-card">
    <div class="card mb-4 shadow-sm">
        <img src="@Event.ImageUrl" class="card-img-top" alt="@Event.Name">
        <div class="card-body">
            <h5 class="card-title">@Event.Name</h5>
            <p class="card-text">
                <i class="bi bi-calendar-event"></i> @Event.Date.ToString("MMMM dd, yyyy")
                <br>
                <i class="bi bi-geo-alt"></i> @Event.Location
            </p>
            <p class="card-text">@Event.Description</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="/event/@Event.Id" class="btn btn-sm btn-outline-primary">Details</a>
                    <a href="/register/@Event.Id" class="btn btn-sm btn-outline-success">Register</a>
                </div>
                <small class="text-muted">@Event.AvailableSeats seats left</small>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Event Event { get; set; } = new();
}